<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="painelPrincipal"
            prefHeight="648.0" prefWidth="800.0"
            style="-fx-background-color: lightblue;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sistema_de_saude.controller.agendamento.AgendamentosConsultasController">

    <children>
        <!-- Título -->
        <Label layoutX="240.0" layoutY="40.0" prefWidth="360.0" text="Agendar Consulta" style="-fx-text-fill: #4180ab;">
            <font>
                <Font name="System Bold" size="35.0"/>
            </font>
        </Label>

        <!-- Nome do Paciente -->
        <Label layoutX="28.0" layoutY="160.0" text="Nome:" style="-fx-text-fill: #4180ab;">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
        <TextField fx:id="tfNomePaciente" layoutX="100.0" layoutY="170.0"
                   prefHeight="26.0" prefWidth="670.0"
                   editable="false" promptText="Nome do paciente"/>

        <!-- Médico -->
        <Label layoutX="28.0" layoutY="230.0" text="Médico:" style="-fx-text-fill: #4180ab;">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
        <ComboBox fx:id="cbMedicos" layoutX="120.0" layoutY="240.0"
                  prefHeight="26.0" prefWidth="320.0"
                  promptText="Selecione o médico"/>

        <!-- Tipo Consulta -->
        <Label layoutX="460.0" layoutY="230.0" text="Tipo:" style="-fx-text-fill: #4180ab;">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
        <TextField fx:id="tfTipoConsulta" layoutX="520.0" layoutY="240.0"
                   prefHeight="26.0" prefWidth="250.0"
                   promptText="Tipo da consulta"/>

        <!-- Data -->
        <Label layoutX="28.0" layoutY="300.0" text="Data:" style="-fx-text-fill: #4180ab;">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
        <DatePicker fx:id="dpDataConsulta" layoutX="100.0" layoutY="305.0" prefWidth="220.0"/>

        <!-- Barra de busca por CPF/SUS (igual ao seu layout de referência) -->
        <Label layoutX="17.0" layoutY="441.0" text="🔍" style="-fx-text-fill: #4180ab;">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>
        <TextField fx:id="tfCpfPaciente" layoutX="47.0" layoutY="450.0"
                   prefHeight="33.0" prefWidth="321.0"
                   promptText="Digite o CPF ou Nº SUS">
            <font>
                <Font size="14.0"/>
            </font>
        </TextField>

        <!-- Botões à direita: Pesquisar e Salvar -->
        <Button layoutX="401.0" layoutY="451.0"
                prefHeight="31.0" prefWidth="172.0"
                text="Pesquisar"
                onAction="#pesquisarPaciente"
                style="-fx-background-color: white; -fx-text-fill: #4180ab; -fx-background-radius: 10;">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <Button layoutX="598.0" layoutY="447.0"
                prefHeight="39.0" prefWidth="186.0"
                text="Salvar"
                onAction="#salvarConsulta"
                style="-fx-background-color: white; -fx-text-fill: #4180ab; -fx-background-radius: 10;">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <!-- Voltar -->
        <Button layoutX="17.0" layoutY="600.0"
                prefHeight="39.0" prefWidth="91.0"
                text="Voltar"
                onAction="#voltarPane"
                style="-fx-background-color: white; -fx-text-fill: #4180ab; -fx-background-radius: 10;">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </children>
</AnchorPane>
