    <children>
        <Label layoutX="250.0" layoutY="14.0" prefHeight="51.0" prefWidth="300.0" style="-fx-text-fill: #4180ab;" text="Usuários do Sistema">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Label>

        <Label layoutX="25.0" layoutY="63.0" prefHeight="51.0" prefWidth="41.0" style="-fx-text-fill: #4180ab;" text="🔍">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <TextField fx:id="tfBuscarUsuario" layoutX="60.0" layoutY="76.0" prefHeight="26.0" prefWidth="207.0" promptText="Pesquisar usuário" />
