                <TableColumn fx:id="colNome" prefWidth="180.0" text="Nome" />
                <TableColumn fx:id="colLogin" prefWidth="180.0" text="Login" />
                <TableColumn fx:id="colSituacao" prefWidth="100.0" text="Situação" />
                <TableColumn fx:id="colAcao" prefWidth="200.0" text="Ações" />
