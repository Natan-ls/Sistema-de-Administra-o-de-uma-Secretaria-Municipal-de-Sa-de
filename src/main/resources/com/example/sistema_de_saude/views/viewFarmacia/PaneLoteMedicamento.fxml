<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="painelPrincipal" prefHeight="648.0" prefWidth="800.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema_de_saude.controller.farmacia.LoteMedicamentoController">
    <children>
        <Label alignment="CENTER" layoutX="182.0" layoutY="14.0" prefHeight="51.0" prefWidth="433.0" style="-fx-text-fill: #4180ab;" text="Lote de Medicamentos">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Label>
        <Button layoutX="304.0" layoutY="596.0" onAction="#cadastrarLoteMedicamento" prefHeight="31.0" prefWidth="189.0" style="-fx-background-color: WHITE; -fx-text-fill: #4180ab; -fx-background-radius: 10;" text="Salvar">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <VBox layoutX="29.0" layoutY="130.0" prefHeight="400.0" prefWidth="761.0" spacing="15">
            <children>
                <!-- Nome do medicamento -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10">
                    <children>
                        <Label style="-fx-text-fill: #4180ab;" text="Nome medicamento">
                            <font><Font name="System Bold" size="25.0" /></font>
                        </Label>
                        <ChoiceBox fx:id="cbNomeRemedio" prefWidth="200.0" style="-fx-background-color: White; -fx-background-radius: 10;" />
                    </children>
                </HBox>

                <!-- Tipo, Unidade e Quantidade -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10">
                    <children>
                        <Label style="-fx-text-fill: #4180ab;" text="Tipo">
                            <font><Font name="System Bold" size="25.0" /></font>
                        </Label>
                        <ChoiceBox fx:id="cbTipoMedicamento" prefWidth="150.0" style="-fx-background-color: White; -fx-background-radius: 10;" />

                        <Label style="-fx-text-fill: #4180ab;" text="Unidade">
                            <font><Font name="System Bold" size="25.0" /></font>
                        </Label>
                        <ChoiceBox fx:id="cbUnidadeMedida" prefWidth="100.0" style="-fx-background-color: White; -fx-background-radius: 10;" />

                        <Label style="-fx-text-fill: #4180ab;" text="Qtd. Caixa">
                            <font><Font name="System Bold" size="25.0" /></font>
                        </Label>
                        <ChoiceBox fx:id="cbQuantidadeCaixa" prefWidth="100.0" style="-fx-background-color: White; -fx-background-radius: 10;" />
                    </children>
                </HBox>

                <!-- Datas -->
                <HBox alignment="CENTER_LEFT" spacing="50">
                    <children>
                        <VBox alignment="CENTER" spacing="5">
                            <Label style="-fx-text-fill: #4180ab;" text="Data fabricação">
                                <font><Font name="System Bold" size="25.0" /></font>
                            </Label>
                            <DatePicker fx:id="dtFabricacao" style="-fx-background-color: White; -fx-background-radius: 10;" />
                        </VBox>
                        <VBox alignment="CENTER" spacing="5">
                            <Label style="-fx-text-fill: #4180ab;" text="Data validade">
                                <font><Font name="System Bold" size="25.0" /></font>
                            </Label>
                            <DatePicker fx:id="dtValidade" style="-fx-background-color: White; -fx-background-radius: 10;" />
                        </VBox>
                    </children>
                </HBox>

                <!-- Quantidade -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label style="-fx-text-fill: #4180ab;" text="Quantidade">
                            <font><Font name="System Bold" size="25.0" /></font>
                        </Label>
                        <TextField fx:id="tfQuantidade" prefWidth="150.0" promptText="Quantidade" style="-fx-background-radius: 10;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
