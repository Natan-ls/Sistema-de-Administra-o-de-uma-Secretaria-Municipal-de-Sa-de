<AnchorPane fx:id="painelPrincipal" prefHeight="648.0" prefWidth="800.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistema_de_saude.controller.farmacia.EntregaRemedioController">
    <children>
        <Label layoutX="210.0" layoutY="14.0" prefHeight="51.0" prefWidth="381.0" style="-fx-text-fill: #4180ab;" text="Entrega de Remédios">
            <font><Font name="System Bold" size="35.0" /></font>
        </Label>

        <Label layoutX="25.0" layoutY="63.0" prefHeight="51.0" prefWidth="41.0" style="-fx-text-fill: #4180ab;" text="🔍">
            <font><Font name="System Bold" size="30.0" /></font>
        </Label>

        <TextField fx:id="tfBuscarProtocolo" layoutX="60.0" layoutY="76.0" prefHeight="26.0" prefWidth="207.0" promptText="Buscar protocolo" />

        <Button layoutX="286.0" layoutY="73.0" onAction="#buscarProtocolo" prefHeight="31.0" prefWidth="113.0" style="-fx-background-color: WHITE; -fx-text-fill: #4180ab; -fx-background-radius: 10;" text="Buscar">
