                <TableColumn fx:id="colNome" prefWidth="200.0" text="Nome" />
                <TableColumn fx:id="colTipo" prefWidth="150.0" text="Tipo" />
                <TableColumn fx:id="colMg" prefWidth="80.0" text="Unidade" />
                <TableColumn fx:id="colQtdCaixa" prefWidth="100.0" text="Qtd/Caixa" />
                <TableColumn fx:id="colQuantidade" prefWidth="100.0" text="Quantidade" />
                <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            </columns>
        </TableView>

        <Button fx:id="btnFinalizar" layoutX="631.0" layoutY="71.0" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #4180ab; -fx-text-fill: white; -fx-background-radius: 10;" text="Finalizar Entrega" />
    </children>
</AnchorPane>
